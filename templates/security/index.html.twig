{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }}! ✅</h1>

    {{ form_start(form) }}

        {{ form_row(form.firstname, {'label' : "Prénom",
            'attr':{
                'placeholder': "Saisir votre prénom"
            }}) }}
        {{ form_row(form.lastname, {'label': "Nom",
        'attr':{
                'placeholder':"Saisir votre nom"
            }}) }}
        {{ form_row(form.email,{'label':"Email",
        'attr':{
                'placeholder':"Saisir un email valide"
            }}) }}
        {{ form_row(form.phone, {'label':"Phone",
            'attr':{
                'placeholder': "Saisir votre numéro de téléphone"
            }}) }}
        {{ form_row(form.password, {'label': "Mot de passe",
            'attr':{
                'placeholder':"Saisir votre mot de passe"
        }}) }}
        {{ form_row(form.passwordConfirm, {'label':"Confirme Mot de passe",
        'attr':{
                'placeholder':"Confirmez votre mot de passe"
            }}) }}
    <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(form) }}
</div>
{% endblock %}

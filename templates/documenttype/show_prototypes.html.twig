{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}
{% block body %}
    <div class="title-article">
        <h3>Filtre</h3>
    <h3 class="count">Les Prototypes({{ documents.getTotalItemCount }})</h3>
    </div>

    <div class="container-article">

        <div class="row-filter">
                {% include 'documenttype/_filter.html.twig' %}
        </div>
        <div class="row-content">
            {% if documents | length > 0 %}
            {# <div><h3>Résultat de votre recherche</h3></div> #}
            <div class="col">
                <div class="grid">
                    {% for documenttype in documents  %}
                        {% include 'documenttype/_document.html.twig' %}
                    {% endfor %}
                    <div class="d-flex justify-content-center">
                        {% do documents.setPageRange(2) %}
                        {{ knp_pagination_render(documents, 'pagination/pagination.html.twig') }}
                    </div>

                </div>
            </div>
        </div>
        {% else %}
            <h4>Aucun résultat pour votre recherche</h4>
            <a href="{{ path('show_prototype') }}">Revenir sur la liste des prototypes</a>
        {% endif %}
    </div>

{%  endblock%}
{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}
{% block body %}
    <div class="title-article">
    <h3>Les Compte-rendus ({{ documents.getTotalItemCount }})</h3>
    </div>
    <h5>Filtre</h5>
    <div class="container-article">
        <div class="row-filter">

                {% include 'documenttype/_filter.html.twig' %}
        </div>
        <div class="row-content">
            {% if documents | length > 0 %}
            {# <div><h3>Résultat de votre recherche</h3></div> #}
            <div class="col">
                <div class="grid">
                    {% for documenttype in documents  %}
                        {% include 'documenttype/_document.html.twig' %}
                    {% endfor %}
                    {# display navigation #}
                    <div class="d-flex justify-content-center">
                        {% do documents.setPageRange(2) %}
                        {{ knp_pagination_render(documents, 'pagination/pagination.html.twig') }}
                    </div>

                </div>
            </div>
        </div>
        {% else %}
            <h4>Aucun résultat pour votre recherche</h4>
            <a href="{{ path('show_compteRendu') }}">Revenir sur la liste des compte-rendus</a>
        {% endif %}
    </div>


    <!-- START THE FEATURETTES -->

    <!--  <hr class="featurette-divider">-->

{%  endblock%}

<div class="card mb-3" >
    <div class="row g-0">
        <div class="col-md-3">
            <img src="{{ asset('uploads/' ~ documenttype.picture)}}" style="width:200px; height: 200px" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">Titre : {{ documenttype.title }}</h5>
                <p class="card-text">Resumé : {{ documenttype.resume }}</p>
                <p class="card-text">
                    Auteur(s) :
                    {% set authors = documenttype.author %}
                    {% set chaine = "" %}
                    {% for author in authors %}
                        {% set chaine = chaine ~ author.getFullName %}
                        {% set chaine = chaine ~ ', ' %}
                    {% endfor %}
                    {{ chaine }}
                </p>
                <p> Publié : {{ documenttype.createdAt ? documenttype.createdAt|date('Y-m-d') : '' }}</p>
                <a href="{{ asset('uploads/' ~ documenttype.brochureFilename) }}" >Télécharger l'article</a>

            </div>
        </div>
    </div>
</div>
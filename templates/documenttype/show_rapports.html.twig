{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}
{% block body %}
    <h1>Les Rapports({{ documents.getTotalItemCount }})</h1>

    <div class="container">
        <div class="row">

            <div class="col">
                {% include 'documenttype/_filter.html.twig' %}
            </div>
        </div>
        <div class="row">
            {% if documents | length > 0 %}
            <div><h3>Résultat de votre recherche</h3></div>
            <div class="col">
                <div class="grid">
                    {% for documenttype in documents  %}
                        {% include 'documenttype/_document.html.twig' %}
                    {% endfor %}
                    <div class="d-flex justify-content-center">
                        {% do documents.setPageRange(2) %}
                        {{ knp_pagination_render(documents, 'pagination/pagination.html.twig') }}
                    </div>

                </div>
            </div>
        </div>
        {% else %}
            <h1>Aucun résultat pour votre recherche</h1>
            <a href="{{ path('show_rapport') }}">Revenir sur la liste des rapports</a>
        {% endif %}
    </div>



    <!-- START THE FEATURETTES -->


{%  endblock%}
{% block title %} Accueil {% endblock %}

{% block carousel %}{% endblock %}

{% block body %}
    <hr class="featurette-divider">

    <h3>Les derniers articles</h3>

    <div class="row">
        {% for document in documents %}
            <div class="col-md-3">
                <div class="new-item text-center">

                   {#  <a href="{{ path('showDocument', {'id':document.id}) }}"><img class="card-img-top" src="/uploads/{{ document.picture }} " alt="{{ document.title }}"  class="img-fluid"/></a> <a href="{{ path('showDocument', {'id':document.id}) }}"><img class="card-img-top" src="/uploads/{{ document.picture | imagine_filter('miniature') }} " alt="{{ document.title }}"  class="img-fluid"/></a> <a href="{{ path('showDocument', {'id':document.id}) }}"><img class="card-img-top" src="/uploads/{{ document.picture | imagine_filter('miniature') }} " alt="{{ document.title }}"  class="img-fluid"/></a>#}
                    <a href="{{ path('showDocument', {'id':document.id}) }}"><img class="card-img-top" src="{{ vich_uploader_asset(document, 'imageFile')| imagine_filter('miniature')}}" alt="{{ document.title }}" /></a>
                    <a href="{{ path('showDocument', {'id':document.id}) }}"><h5 class="card-title">{{ document.title }}</h5></a>
                    <span class="new-subtitle">Publié le {{ document.createdAt | date("d/m/Y")}}</span>
                    <span class="new-date">
                        Auteur(s) :
                              {% set authors = document.author %}
                        {% set chaine = "" %}
                        {% for author in authors %}
                            {% set chaine = chaine ~ author.getFullName %}
                            {% set chaine = chaine ~ ', ' %}
                        {% endfor %}
                        {{ chaine }}
                    </span>

                </div>
            </div>
        {% endfor %}

    </div><!-- /.row -->
    <div>
        <span><a href="{{ path('show_article') }}" >Liste des articles</a></span>
    </div>
    <hr class="featurette-divider">

    <h3>Les dernières nouvelles</h3>

    <div class="row">
        {% for new in news %}
            <div class="col-md-3">
                <div class="new-item text-center">

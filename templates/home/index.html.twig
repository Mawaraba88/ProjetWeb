    <h3 style="font-style: italic">Les derniers articles</h3>
    <div class="container bootstrap snippets bootdey">
        <div class="row">
            {% for document in documents %}
        <div class="col-sm-3">
            <div class="widget single-news">
                <div class="image">
                    <a href="{{ path('showDocument', {'id':document.id}) }}">
                        <img src="{{ asset('/uploads/font.jpg')}}"  alt="{{ document.title }}" class="img-responsive">
                    </a>


                    <span class="gradient"></span>
                </div>
                <div class="details">
                    <div class="category"><a href="">Articles</a></div>
                    <a href="{{ path('showDocument', {'id':document.id}) }}"><h5 class="card-title">{{ document.title }}</h5></a>

                    <span class="new-date">
                        Auteur(s) :
                              {% set authors = document.author %}
                        {% set chaine = "" %}
                        {% for author in authors %}
                            {% set chaine = chaine ~ author.getFullName %}
                            {% set chaine = chaine ~ ', ' %}
                        {% endfor %}
                        {{ chaine }}
                    </span>
                    <time>Publié le {{ document.createdAt | date("d/m/Y")}}</time>
                </div>
            </div>
        </div>
        {% endfor %}

            <div>
                <span><a href="{{ path('show_article') }}" style="font-style: italic" >Voir tous les articles</a></span>
            </div>
        </div>

    </div>

    <hr class="featurette-divider">


    <div class="container">
        <div class="row">
            <div class="col-lg-4">

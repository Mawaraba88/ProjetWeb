                    <a href="{{ path('showNews', {'id':new.id}) }}" ><h5 class="card-title">{{ new.title }}</h5></a>
                    <span class="new-subtitle">Publié le {{ new.createdAt | date("d/m/Y")}}</span>
                    {# <span class="new-date">


                            {% if new.startCreatedAt and new.endCreatedAt %}

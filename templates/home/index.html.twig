           <div class="container bootstrap snippets bootdey">
               {% for new in news %}
               <div class="row">

                   <div class="widget single-news">
                       <div class="image">
                           <img src="{{ asset('/uploads/news-fond.jpg')}}"  alt="{{ new.title }}" class="img-responsive">

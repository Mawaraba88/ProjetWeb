{% extends 'base.html.twig' %}

{% block title %}News index{% endblock %}

{% block body %}
    <h1>News index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Resume</th>
                <th>Picture</th>
                <th>CreatedAt</th>
                <th>StartCreatedAt</th>
                <th>EndCreatedAt</th>
                <th>Place</th>
                <th>BrochureFileName</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td>{{ news.title }}</td>
                <td>{{ news.resume }}</td>
                {# <td>{{ news.picture }}</td>#}
                <td>{{ news.createdAt ? news.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ news.startCreatedAt ? news.startCreatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ news.endCreatedAt ? news.endCreatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ news.place }}</td>
                {#  <td>{{ news.brochureFileName }}</td>#}
                <td>{{ news.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('news_show', {'id': news.id}) }}">show</a>
                    <a href="{{ path('news_edit', {'id': news.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('news_new') }}">Create new</a>
{% endblock %}
